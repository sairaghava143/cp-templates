big nCr(big n, big r) {

	if(n < r) {

		return 0;
	}

	if (n == r) {

		return 1;
	}

	if(r == 0) {

		return 1;
	}

	return (((factorials[n] * (mmi[r])) % mod) * (mmi[n - r])) % mod;
}
]]></content>
